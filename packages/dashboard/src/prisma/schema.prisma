generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}

model Transaction {
  id           Int    @id @default(autoincrement())
  tokenAccount String
  amount       Float
  usdAmount    Float
  mint         String
  signature    String

  updatedAt DateTime @updatedAt
  createdAt DateTime

  @@unique([tokenAccount, signature])
  @@index([tokenAccount])
  @@index(createdAt(sort: Desc))
}

model DailyVolume {
    id           Int    @id @default(autoincrement())
    tokenAccount String
    amount       Float
    usdAmount    Float
    mint         String
    date         DateTime

    updatedAt DateTime @updatedAt
    createdAt DateTime @default(now())

    @@unique([tokenAccount, date])
    @@index([tokenAccount, date])
    @@index(createdAt(sort: Desc))
}